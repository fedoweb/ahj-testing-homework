{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "target": "ES2022",
    "checkJs": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/__tests__/*"
  ],
  "include": ["src/**/*"]
}